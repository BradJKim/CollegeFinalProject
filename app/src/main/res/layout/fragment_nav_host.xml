<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainMenu.NavHostFragment">

    <Button
        android:id="@+id/button_navHost_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_navHost_filter"
        tools:layout_editor_absoluteY="641dp" />

    <Button
        android:id="@+id/button_navHost_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_filtericon"
        app:layout_constraintEnd_toStartOf="@+id/button_navHost_settings"
        app:layout_constraintStart_toEndOf="@+id/button_navHost_viewing"
        app:layout_constraintTop_toTopOf="@+id/button_navHost_settings" />

    <Button
        android:id="@+id/button_navHost_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_homeiconunclicked"

        app:layout_constraintEnd_toStartOf="@+id/button_navHost_viewing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_navHost_viewing" />

    <Button
        android:id="@+id/button_navHost_viewing"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_viewicon"
        app:layout_constraintEnd_toStartOf="@+id/button_navHost_filter"
        app:layout_constraintStart_toEndOf="@+id/button_navHost_home"
        app:layout_constraintTop_toTopOf="@+id/button_navHost_filter" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_capybaralogo"
        app:layout_constraintBottom_toTopOf="@+id/button_navHost_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>